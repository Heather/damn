#!/bin/bash

function damn() {
	for file in "damnation/${1}/"*
	do
		f=$(basename $file)
		if [ -f "/usr/portage/${1}/${f}" ]
		then
			cp "/usr/portage/${1}/${f}" "/usr/portage/${1}/${f}.damn"

			"./damnation/${1}/${f}"
			ebuild "/usr/portage/${1}/${f}" digest

			emerge ${1}

			cp "/usr/portage/${1}/${f}.damn" "/usr/portage/${1}/${f}"
			ebuild "/usr/portage/${1}/${f}" digest

			rm -rf "/usr/portage/${1}/${f}.damn"
		fi
	done
}

function version() {
	echo "damn 0.0.2"
}

function help() {
               echo "damn ..."
               echo "    <category>/<package> to emerge package from damnation"
               echo "    all to rebuild all"
               echo "    -v or --version to check version"
               echo "    --help to see this message"
}

if [ $# -eq 0 ]
then
	echo "Usage: damn <package> (examples: [damn sys-apps/portage; damn all])"
elif [ $1 = "all" ]
then
	for dir in in "damnation/"*
	do
		d=$(basename $dir)
		for package in in "damnation/${d}/"*
		do
			p=$(basename $package)
			damn "${d}/${p}"
		done
	done
elif [ $1 = "-v" ] || [ $1 = "--version" ]
then
	version
elif [ $1 = "--help" ]
then
               help
else
	damn $1
fi
